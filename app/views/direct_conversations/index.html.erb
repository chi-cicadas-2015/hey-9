<div class="container">
  <h3 class="center">Your Messages</h1>
  <div>
    <div class="new_convo_form">
      <a class="btn tooltipped modal-trigger" data-position="top" data-delay="50" data-tooltip="Send a new message" href="#modal5">New Message</a>
      <div id="modal5" class="modal">
        <div class="modal-content">
          <%= render partial: "form", locals: { direct_conversation: DirectConversation.new} %>
        </div>
      </div>
    </div>
    <div class="convo_list">
      <ul class="collapsible popout" data-collapsible="accordion">
        <%= render partial: "conversation", collection: @direct_conversations, as: :direct_conversation %>
      </div>
    </div>
  </div>
</div>
