<div class="row">
  <%= form_for direct_conversation, :html => {:class => "col s12"} do |f| %>
    <div class="input-field col s12">
      <%= f.label "Recipient Username(s)" %><br/>
      <%= f.text_area :recipient, :class => "materialize-textarea", placeholder: "Who are you sending a message to? Please input names seperated by commas: name1, name2, name3" %>
    </div>
    <div class="input-field col s12">
      <%= f.label "Subject" %><br/>
      <%= f.text_area :subject, :class => "materialize-textarea", placeholder: "Subject of your conversation" %>
    </div>
      <%= f.fields_for :private_message do |u| %>
      <div class="input-field col s12">
        <%= u.label "Message" %><br/>
        <%= u.text_area :content, :class => "materialize-textarea", placeholder: "Write a new message" %>
      </div>
      <% end %>
    <%= f.submit :class => "btn", :value => "Send message" %>
  <% end %>
</div>
