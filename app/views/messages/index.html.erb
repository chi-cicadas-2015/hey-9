<div class="container">
  <div class="card">
    <ul class="collapsible" data-collapsible="accordion">
      <li>
    <% @messages.each do |message| %>
      <div class="collapsible-header">
        <h3 class="truncate"><%= message.content %></h3>
      </div>
      <div class="collapsible-body">
        <ul class="collection">
          <% message.comments.each do |comment| %>
            <li><%= comment.content %></li>
          <% end %>
          <% if current_user != nil %>
          <%= link_to "Add Comment", message_commentable_index_path(message), id: 'new-comment', remote: true %>
          <% end %>
        </ul>
      </div>
    <% end %>
    </li>
    </ul>
  </div>
</div>
