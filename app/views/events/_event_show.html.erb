<h1>MAP GOES HERE</h1>
<div class="card teal lighten-4">
  <p class="center"><%= event.description %></p>
</div>
<div class="divider"></div>
<div class="row">
  <div class="col s12 l4">
    <h4>Address: </h4>
    <h5><%= event.location %></h5>
    <h4>Day: </h4>
    <h5><%= event.event_start.strftime("%A, %B %d, %Y")%></h5>
    <h4>Time: </h4>
    <h5> <%= event.event_start.strftime("%I:%M%p")%> - <%= event.event_end.strftime("%I:%M%p") %></h5>
  </div>
  <div class="col s12 l4">
    <% if @event.comments %>
      <%= render partial: "events/comments", locals: {commentable: @event} %>
    <% end %>
    <% if @current_user %>
      <%= render partial: "events/comments_form", locals: {commentable: @event} %>
    <% end %>
  </div>
  <div class="col s12 l4">
    <h5>Attending</h5>
    <div class="row">
      <% event.event_invitations.each do |invitee|%>
        <% dog = Dog.find(invitee.invitee_id) %>
        <% if invitee.rsvp_status == "accepted" %>
          <div class="col s8 m4 l2 green-text">
            <h6><%= dog.name %></h6>
          </div>
        <% end %>
      <% end %>
    </div>
    <h5>Invited</h5>
    <div class="row">
      <% event.event_invitations.each do |invitee|%>
        <% dog = Dog.find(invitee.invitee_id) %>
        <% if invitee.rsvp_status == "pending" %>
          <div class="col s8 m6 l2 amber-text">
            <h6><%= dog.name %></h6>
          </div>
        <% end %>
      <% end %>
    </div>
    <h5>Not Attending</h5>
    <div class="row">
      <% event.event_invitations.each do |invitee|%>
        <% dog = Dog.find(invitee.invitee_id) %>
        <% if invitee.rsvp_status == "declined" %>
          <div class="col s8 m6 l2 red-text">
            <h6><%= dog.name %></h6>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
