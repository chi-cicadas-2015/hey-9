<h1>MAP GOES HERE</h1>
<div class="card teal lighten-4">
  <p class="center"><%= event.description %></p>
</div>
<div class="divider"></div>
<div class="row">
  <div class="col s12 l4">
    <h4>Address: </h4>
    <h5><%= event.location %></h5>
    <h4>Day: </h4>
    <h5><%= event.event_start.strftime("%A, %B %d, %Y")%></h5>
    <h4>Time: </h4>
    <h5> <%= event.event_start.strftime("%I:%M%p")%> - <%= event.event_end.strftime("%I:%M%p") %></h5>
  </div>
  <div class="col s12 l4">
    <% if @event.comments %>
      <%= render partial: "events/comments", locals: {commentable: @event} %>
    <% end %>
    <% if @current_user %>
      <%= render partial: "events/comments_form", locals: {commentable: @event} %>
    <% end %>
  </div>
  <div class="col s12 l4">
    <% if dog_events(current_user.dogs).include?(event) %>
      <a class="btn-floating btn-large waves-effect waves-light red"></a>
        <div class="fixed-action-btn">
    <a class="btn-floating btn-large red">
      <i class="large material-icons">+</i>
    </a>
    <% current_user.dogs.each do |dog| %>
    <ul>
      <li><a class="btn-floating red">
        <%= link_to "#{dog.name}",  event_event_invitations_path(:event_id => params[:id], :invitee_id => dog.id), :method => :post %>
      </a></li>
    <% end %>
     
  </div>
        
    <% end %>
    <h5>Attending</h5>
    <div class="row">
      <div class="col s8 m4 l2 green-text">
        <% event.invitees.uniq.each do |dog|%>
            <h6><%= link_to "#{dog.name}", dog_path(dog) %></h6>
        <% end %>
      </div>
    </div>
    
    </div>
  </div>
</div>
