<div class="section">
  <h1><%= dog.name %></h1>
  <div class="row">
    <div class="col s4">
     <%= image_tag dog.avatar.url(:medium, :class => "circle responsive-img") %>
    </div>
    <div id="twilio-messaging">
      <%= button_to "Send text message", send_text_message_path(:user_numbers => text_users, :dog => dog.name) %>
    </div>
    <div class="col s8">
      <ul class="collapsible" data-collapsible="accordion">
      <li>
        <div class="collapsible-header">Dogs <%= dog.name %> Follows</div>
        <div class="collapsible-body">
          <ul class="collection">
            <% dog.find_good_dogs do |dog| %>
              <li class="collection-item avatar">
                <a href="/dogs/<%= friend.id %>">
                  <span class="title"><%=dog.name%></span>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </li>
      <li>
        <div class="collapsible-header">Edit <%= dog.name %></div>
        <div class="collapsible-body">
          <%= render partial: "edit", locals: {dog: dog} %>
        </div>
      </li>
      <li>
        <div class="collapsible-header"><a class="modal-trigger" href="#modal1">Remove <%= dog.name %> From Pack</a></div>
        <div class="collapsible-body">
          <div id="modal1" class="modal">
            <div class="modal-content">
              <h4>Are you sure you want to remove <%= dog.name %> from your pack?</h4>
            </div>
            <div class="modal-footer">
              <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
          </div>
        </div>
      </li>
    </ul>
    </div>
  </div>
</div>
<div class="divider"></div>
